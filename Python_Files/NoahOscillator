import serial
import time
import random

global Xbee
Xbee = serial.Serial('/dev/ttyUSB0', 115200)

phase = random.randint(0,2)
threshold = 360

while True:

	try:
		if phase < threshold:
			currentTime = time.time()
			timeDifference = currentTime - sendTime
			phase += timeDifference

		if phase >= threshold:
			phase = 0
			message = "Received"
			Xbee.write(message.encode())
			print("Pulse")


		if Xbee.inWaiting() > 0:
			message = Xbee.read(Xbee.inWaiting()).decode()
			print(message)
			if phase > 0 and phase <= 180:
					phase -= timeDifference
			if phase > 180 and phase <= threshold:
				phase += timeDifference

		sendTime = currentTime

	except KeyboardInterrupt:
		print("Process Interrupted")
		break

Xbee.close()